<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Signup</title>
    <%- include('./partials/head') %>
  </head>
  <body style="background-color: #10172a; color: white">
    <%- include('./partials/nav') %>
    <div class="container mt-5">
      <% if (locals.error) { %>
      <div id="error-alert" class="alert alert-danger" role="alert">
        <%= error %>
      </div>
      <script>
        setTimeout(() => {
          const errorAlert = document.getElementById("error-alert");
          errorAlert.style.display = "none";
        }, 5000);
      </script>
      <% } %>
      <form class="w-50 mx-auto" action="/user/signup" method="post">
        <div class="mb-3">
          <h1
            style="
              display: flex;
              justify-content: center;
              align-items: center;
              margin-top: 7rem;
            "
          >
            Signup
          </h1>
          <label for="fullName" class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="fullName"
            aria-describedby="emailHelp"
            name="fullName"
          />
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            aria-describedby="emailHelp"
            name="email"
          />
          <div id="emailHelp" class="form-text" style="color: wheat">
            We'll never share your email with anyone else.
          </div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
          />
        </div>

        <button type="submit" class="btn btn-primary">Signup</button>
      </form>
      <p class="text-center p-3">
        Already Have Account?
        <a href="/user/login" class="btn btn-outline-primary p-1">login</a>
      </p>
    </div>
    <%- include('./partials/script') %>
  </body>
</html>
